def check_Prime(n, m=2):                #n is the number you want to check for
                                        #m is the starting number, m = 2 because it's the first prime


    is_Prime = True                     #check if it is a prime               
    if n <= 1:                          
        is_Prime = False

    else:
        for i in range (m,n):           #in range of 2 and itself
            if n == 2:
                is_Prime = True


            elif n % m == 0:
                is_Prime = False

            else:
                return check_Prime(n, m+1)      #add 1 onto m




    if is_Prime is True:
        print('This is a prime')
    else:
        print('This is not a prime')

check_Prime(13)
