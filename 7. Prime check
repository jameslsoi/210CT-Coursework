def check_Prime(n, m=2):


    is_Prime = True
    if n <= 1:
        is_Prime = False

    else:
        for i in range (m,n):
            if n == 2:
                is_Prime = True


            elif n % m == 0:
                is_Prime = False

            else:
                return check_Prime(n, m+1)




    if is_Prime is True:
        print('This is a prime')
    else:
        print('This is not a prime')

check_Prime(13)
