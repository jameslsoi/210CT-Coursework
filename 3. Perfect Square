'''
pseudocode: function which returns highest perfect square
import math module

FUNCTION pefect_Square
    n <- input integer

    x  <- square root of n

    if x*x  <- n:
        output <- n is perfect square
    else:
        output <- n is not perfect square


big 0 notation =  0 (n+4)
'''

import math

def perfect_Square (n):

    x = math.sqrt (n)

    if x*x == n:                                  # if x^2 is equal to the parameter then it must be a perfect square
        print (" This is a perfect square")

    else:
        x = math.floor(x)
        ans = x*x
        print (ans)


perfect_Square(113)   
