'''
pseudocode: function which returns highest perfect square
import math module

FUNCTION perfect_square(number)

    square = sqrt (number)

    if square*square == number
        output <-- "This is a perfect square"
    else
        square = floor(square)
        result = square*square
        output <-- result

big 0 notation =  0 (4n) ---> 0 (n)
'''

import math
def perfect_Square(number):

    square = math.sqrt (number)

    if square*square == number:
        print (" This is a perfect square")

    else:
        square = math.floor(square) # round down
        result = square*square
        print (result)


perfect_Square(9)
perfect_Square(23)
perfect_Square(2)
